<h1>Edit Figure</h1>
<h3><%= @figure.name %></h3>

<form class="" action="/figures/<%= @figure.id %>/edit" method="post">
  <input type="hidden" name="_method" value="patch">

  <label>figure Name:</label>

  <input type="text" name="figure[name]" id="figure_name" value="<%= @figure.name %>">
  <br></br>

  <!-- Landmark Checkboxes -->
  <label>Choose an existing landmark:</label>
  <br></br>

  <%Landmark.all.each do |landmark|%>
    <input type="checkbox" name="figure[landmark_ids][]" value="<%=landmark.id%>" id="landmark_<%=landmark.id%>" <%='checked' if @figure.landmarks.include?(landmark) %>  ><%=landmark.name%></input>
    <br>
  <%end%>

  <br>
  <label>and/or, create a new landmark:</label>
  <br></br>
  <label>name:</label>
    <input type="text" id="new_landmark" name="landmark[name]"></input>
  <br></br>

  <!-- Title Checkboxes -->
  <label>Choose an existing title:</label>
  <br></br>

  <%Title.all.each do |title|%>
    <input type="checkbox" name="figure[title_ids][]" value="<%=title.id%>" id="title_<%=title.id%>" <%='checked' if @figure.titles.include?(title) %> ><%=title.name%></input>
    <br>
  <%end%>

  <br>
  <label>and/or, create a new title:</label>
  <br></br>
  <label>name:</label>
    <input type="text" id="new_title" name="title[name]"></input>
  <br></br>

  <input type="submit" id="Edit Figure" name="update" value="Update Figure">
</form>
