<!-- Create a New Landmark -->
<form class="" action="/landmarks" method="POST">
  <label>Landmark Name:</label>

  <input type="text" name="landmark[name]" id="landmark_name">
  <br></br>

  <!-- Figure Checkboxes -->
  <label>Choose an existing figure:</label>
  <br></br>

  <%Figure.all.each do |figure|%>
    <input type="checkbox" name="landmark[figure_id]" value="<%=figure.id%>" id="figure_<%=figure.id%>"><%=figure.name%></input>
    <br>
  <%end%>

  <br>
  <label>and/or, create a new figure:</label>
  <br></br>
  <label>name:</label>
    <input type="text" id="new_figure" name="figure[name]"></input>
  <br></br>

  <!-- Year Completed -->
  <label>Enter the year completed:</label>

  <input type="text" id="landmark_year_completed" name="landmark[year_completed]"></input>
  <br>

  <input type="submit" id="Create New Landmark" value="Create (New) Landmark">
</form>
